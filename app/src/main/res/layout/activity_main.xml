<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zx.rangselectbar.RangeSelectBar
        android:id="@+id/rsb_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="10dp"
        app:RSBBackgroundColor="@color/gray_word_light"
        app:RSBBottomPadding="4dp"
        app:RSBHeight="4dp"
        app:RSBHintTextList="@array/range_array"
        app:RSBLeftSliderPosition="0"
        app:RSBPointRadius="1dp"
        app:RSBRightSliderPosition="2"
        app:RSBSelectColor="@color/black"
        app:RSBSliderRes="@drawable/shape_circle"
        app:RSBTextColor="@color/black_word"
        app:RSBTextSize="16dp" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滑块位置："
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置滑块位置" />

        <EditText
            android:id="@+id/et_left"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="，" />

        <EditText
            android:id="@+id/et_right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>